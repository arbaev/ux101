<div class="site-content home">
  <main class="content-area">
    <div class="container hellotron">
      <h1 class="hellotron-title"><%= config.subtitle %></h1>
      <h5 class="hellotron-text"><%= config.description %></h5>
    </div>
    <% page.posts.each(function(item, itemIndex){ %>
      <% if (itemIndex % 2 === 0) { %>
        <div class="even">
          <%- partial('_partial/article-index', {item: item}) %>
        </div>
      <% } else { %>
        <div class="odd">
          <%- partial('_partial/article-index', {item: item}) %>
        </div>
      <% } %>
    <% }); %>

    <%- partial('_partial/pagination') %>
  </main>
</div>