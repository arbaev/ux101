<div class="content-area">
  <div class="post">
    <!-- Post Content -->
    <div class="container">
      <article>
        <!-- Title date & tags -->
        <div class="post">
          <p class="posted-on">
          <%= page.date.format(config.date_format) %>
          </p>

          <h2 class="entry-title">
            <a href="<%- config.root %><%- page.path %>" rel="bookmark">
              <%- page.title || theme.default_post_title || "Untitled" %>
            </a>
          </h2>
          <% if (page.description){ %>
            <div class="index-subtitle">
                <%- page.description %>
            </div>
          <% } %>
          <div class="tags-links">
            <% if (page.tags) { %>
              <% page.tags.each(function(tag){ %>
                <a href="<%= config.root %>tags/<%= tag.name %>/" rel="tag">
                  <%- tag.name %>
                </a>
              <% }); %>
            <% } %>
          </div>
        </div>
        <!-- Post Main Content -->
        <div class="entry-content">
          <%- page.content %>
        </div>
      </article>
    </div>
    <!-- Comments -->
    <div class="container">
      <%- partial('_partial/comment', {
          shortname: config.disqus_shortname
        }) %>
    </div>
    <!-- Pre or Next -->
    <div class="nav-links">
      <% if (page.prev) { %>
        <div class="nav-previous">
          <a href="<%- config.root %><%- page.prev.path %>" rel="prev">
            <span class="meta-arraw meta-arraw-right"></span>
            <div class="nav-links-sub align-right">
              <%- __('prev') %>
            </div>
            <div class="nav-links-title">
              <%- page.prev.title %>
            </div>
          </a>
        </div>
      <% } %>
      <% if (page.next) { %>
        <div class="nav-next">
          <a href="<%- config.root %><%- page.next.path %>" rel="next">
            <div class="nav-links-title">
              <%- page.next.title %>
            </div>
            <div class="nav-links-sub">
              <%- __('next')%>
            </div>
            <span class="meta-arraw meta-arraw-left"></span>
          </a>
        </div>
      <% } %>
    </div>

  </div>
</div>
